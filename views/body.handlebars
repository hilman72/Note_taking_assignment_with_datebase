<nav class="navbar navbar-expand-sm navbar-dark bg-dark">
    <div class="container">
        <a class="navbar-brand">Paper</a>
        <ul class="navbar-nav"></ul>
    </div>
</nav>
<div class="container">
    <div class="text-center mt-5 mb-5">
        <h1 class="display-1">Note.js</h1>
    </div>
    <div class="row">
        <div class="col-md-6 px-5 ">
            <form action="/files/post" method="POST">
                <h1 class="mb-4">New Note</h1>
                <div class="form-group">
                    <div class="input-group input-group-lg">
                        <div class="input-group-prepend">
                            <span class="input-group-text bg-dark text-light">
                                <i class="fas fa-heading"></i>
                            </span>
                        </div>
                        <input type="text" id="title" name="title" class="form-control bg-light text-black"
                            placeholder="Title">
                    </div>
                </div>


                <div class="form-group">
                    <div class="input-group input-group-lg">
                        <div class="input-group-prepend">
                            <span class="input-group-text bg-dark text-light">
                                <i class="fas fa-pencil-alt"></i>
                            </span>
                        </div>
                        <textarea class="form-control text-dark" id="message" name="message"
                            placeholder="Massage"></textarea>
                    </div>
                </div>

                <input type="submit" value="Submit" class="btn bg-dark text-light btn-block btn-lg m-0 submit-btn">
            </form>
        </div>


        <div class="col-md-6">
            <h1 class="text-center">You node</h1>
            <hr>
            {{#each note}}
            <div>
                <div class="card mb-3">
                    <div class="card-body">
                        <h4 class="class-title">{{this.title}}</h4>
                        <div class="card-text mt-3">
                            {{this.message}}


                        </div>
                        <div class="mt-3 d-flex">
                            <button type="button" id="edit-btn" class="btn btn-info mr-2"><a class="text-light"
                                    href="http://localhost:8000/files/edit/{{this.id}}">Edit</a></button>
                            <form method="post" action="/files/delete/{{this.id}}">
                                <input type="hidden" name="_method" value="DELETE">
                                <button type="submit" class="btn btn-danger text-light">Delete</button>
                            </form>
                        </div>

                    </div>
                </div>
            </div>
            {{/each}}
        </div>

    </div>

</div>