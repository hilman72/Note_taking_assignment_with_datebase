    <div class="container">
        <a class="navbar-brand">Paper</a>
        <ul class="navbar-nav"></ul>
    </div>
</nav>
<div class="container">
    <div class="text-center mt-5 mb-5">
        <h1 class="display-1">Note.js</h1>
    </div>
    <div class="row justity-content-center">
        <div class="col-md-6 offset-md-3 px-5 ">
            <form action="/files/put/{{detail.id}}" method="POST">
                <h1 class="mb-4">Edit Note</h1>
                <div class="form-group">
                    <div class="input-group input-group-lg">
                        <div class="input-group-prepend">
                            <span class="input-group-text bg-dark text-light">
                                <i class="fas fa-heading"></i>
                            </span>
                        </div>
                        <input type="text" id="title" name="title" class="form-control bg-light text-black"
                            placeholder="Title" value={{detail.title}}>
                    </div>
                </div>


                <div class="form-group">
                    <div class="input-group input-group-lg">
                        <div class="input-group-prepend">
                            <span class="input-group-text bg-dark text-light">
                                <i class="fas fa-pencil-alt"></i>
                            </span>
                        </div>
                        <textarea class="form-control text-dark" id="message" name="message"
                            placeholder="Massage">{{detail.message}}</textarea>
                    </div>
                </div>

                <input type="submit" value="Submit" class="btn bg-dark text-light btn-block btn-lg m-0 submit-btn">

            </form>
            <button class="btn btn-info btn-block btn-lg mt-3"><a class="text-light"
                    href="http://localhost:8000/files/body">Cancel</a></button>
        </div>
    </div>

</div>